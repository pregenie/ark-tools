# ARK-TOOLS Environment Configuration
# ====================================
# Option 1: Run 'ark-setup --mode quick' for automatic configuration
# Option 2: Copy this file to .env and customize the values

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================

# Secret keys - MUST be changed for production
ARK_SECRET_KEY=your-super-secret-key-here-change-this-in-production
ARK_JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# Database password - MUST be changed for production
POSTGRES_PASSWORD=your-secure-database-password-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL configuration
ARK_DATABASE_URL=postgresql://ark_admin:your-secure-database-password-here@localhost:5432/ark_tools

# Redis configuration  
ARK_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# OpenAI API Key (optional but recommended)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional but recommended)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# MAMS INTEGRATION
# =============================================================================

# Path to MAMS components (adjust if needed)
MAMS_BASE_PATH=../arkyvus_project/arkyvus
MAMS_MIGRATIONS_PATH=../arkyvus_project/arkyvus/migrations

# =============================================================================
# LLM CONFIGURATION (for embedded models)
# =============================================================================

# Path to the LLM model file (GGUF format)
# Download models from: https://huggingface.co/models?library=gguf
ARK_LLM_MODEL_PATH=~/.ark_tools/models/codellama-7b-instruct.gguf

# LLM inference parameters
ARK_LLM_CONTEXT_SIZE=8192
ARK_LLM_MAX_TOKENS=2048
ARK_LLM_THREADS=8
ARK_LLM_TEMPERATURE=0.1

# Enable GPU acceleration if available
ARK_LLM_ENABLE_GPU=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ARK_ENABLE_WEBSOCKETS=true
ARK_ENABLE_MONITORING=true
ARK_ENABLE_SECURITY_SCAN=true

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask environment (development/production)
FLASK_ENV=development
FLASK_DEBUG=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Prometheus monitoring
PROMETHEUS_ENABLED=true

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=your-grafana-admin-password-here

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container timezone
TZ=UTC

# Log level
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development features
DEV_MODE=true

# Disable security features for development
DISABLE_SSL_VERIFY=false

# =============================================================================
# EXAMPLE PRODUCTION VALUES
# =============================================================================
# For production deployments, use strong, unique values:

# Example strong secret keys (generate your own!)
# ARK_SECRET_KEY=4f8d9c2a3b5e7f1a9c4e6d8b2f5a3c7e9d1b4f6a8c2e5d7b9f3a6c8e1d4b7f9a2c5
# ARK_JWT_SECRET_KEY=a9c7e4f2b8d5a3c9f6e2d8b4a7c3f9e6d2b5a8c4f7e9d3b6a2c5f8e1d4b7a9c3f6

# Example production database URL
# ARK_DATABASE_URL=postgresql://ark_admin:StrongPassword123!@postgres.example.com:5432/ark_tools

# =============================================================================
# NOTES
# =============================================================================

# 1. Use 'ark-setup' for intelligent configuration that:
#    - Detects existing PostgreSQL/Redis services in Docker or native
#    - Inherits credentials from parent project .env files
#    - Validates all connections before saving
#    - Generates secure secret keys automatically
# 2. Never commit real API keys or passwords to version control
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. For production, consider using a secrets management system
# 5. Regenerate all secret keys for each environment
# 6. Use strong, unique passwords for database access
# 7. Enable SSL/TLS in production environments
# 8. Configure proper firewall rules for production deployments